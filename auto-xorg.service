[Unit]
Description=Generates Xorg for the first or last valid non-VFIO video device

[Service]
ExecStart="/bin/bash /usr/sbin/auto-xorg.bash y"    #  first valid video device
# ExecStart=/bin/bash /usr/sbin/auto-xorg.bash       # last valid video device
RemainAfterExit=true
Type=oneshot

[Install]
WantedBy=multi-user.target
